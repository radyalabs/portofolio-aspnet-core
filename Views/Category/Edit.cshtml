@model portofolio_aspnet_core.Models.Category;

@if (Model != null)
{
    <form id="form-create-category" method="post" action='@Url.Action("Update", "Category", new { id = @Model.Id })'>
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" id="name" class="form-control" value="@(Model.Name)" required>
        </div>
        <div class="d-flex">
            <button class="btn btn-primary ms-auto" type="submit">
                <i class="bi bi-send me-1"></i>
                SUBMIT
            </button>
        </div>
    </form>
}