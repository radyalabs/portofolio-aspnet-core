@model portofolio_aspnet_core.Models.Member;

@if (Model != null)
{
    <form id="form-create-member" enctype="multipart/form-data" method="post" action='@Url.Action("Update", "Member", new { id = @Model.Id })'>
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label for="image" class="form-label">Profile Picture</label>
            <input class="form-control" name="image" type="file" id="image" accept="image/*" value="@Model.ProfilePicture">
            @if (!string.IsNullOrEmpty(Model.ProfilePicture))
            {
                <img id="file-preview" src="@Model.ProfilePicture" alt="Profile Picture" class="mt-3"/>
            }
            else
            {
                <img id="file-preview" src="#" alt="Profile Picture" class="mt-3 d-none"/>
            }
        </div>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" id="name" class="form-control" value="@Model.Name" required>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control">@Model.Description</textarea>
        </div>
        <div class="d-flex">
            <button class="btn btn-primary ms-auto" type="submit">
                <i class="bi bi-send me-1"></i>
                SUBMIT
            </button>
        </div>
    </form>
}

@section Scripts {
<script>
    $(document).ready(function() {
        $("#image").on("change", function(e) {
            if (e.target.files){
                $("#file-preview").prop("src", URL.createObjectURL(e.target.files[0]));
                $("#file-preview").removeClass("d-none");
            }
        });
    });
</script>
}